{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": false,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/"]
}
