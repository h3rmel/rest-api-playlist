{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true,

    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "lib": ["ES2015"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": ["src/swagger-output.json", "src/**/*"],
  "exclude": ["node_modules"]
}
